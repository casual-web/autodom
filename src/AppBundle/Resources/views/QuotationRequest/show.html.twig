{% extends "AppBundle:Admin:base.html.twig" %}

{% block body %}

    <div class="container">
        <div class="page-header">
            <h1>Demande de devis #{{ entity.id }}</h1>
        </div>

        <table class="record_properties table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            {% include 'AppBundle:QuotationRequest:show_common.html.twig' %}
            <tr>
                <th>Créé le</th>
                <td nowrap>{{ entity.created|date('Y-m-d H:i') }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>
                    <span class="label label-{{ qr_status_enum_to_style(entity.status) }}">
                            {{ qr_status_enum_to_label(entity.status) }}
                    </span>
                </td>
            </tr>
            </tbody>
        </table>

        <ul class="record_actions">
            <li>
                <a href="{{ path('admin_devis_edit', { 'id': entity.id }) }}" class="btn btn-default">
                    Editer
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>
    </div>
{% endblock %}
