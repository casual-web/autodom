{% extends '::base.html.twig' %}

{% block body -%}


    <div class="container">

        <div class="page-header">
            <h1>Service #{{ entity.ref }}</h1>
        </div>

        <table class="record_properties table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Référence</th>
                <td>{{ entity.ref }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td> {%  if entity.enabled == 1  %}
                        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                    {% endif %}</td>
            </tr>
            </tbody>
        </table>

        <ul class="record_actions">
            <li>
                <a class="btn btn-default" href="{{ path('admin_service') }}">
                    Back to the list
                </a>
            </li>
            <li>
                <a class="btn btn-default" href="{{ path('admin_service_edit', { 'id': entity.id }) }}">
                    Edit
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>

    </div>
{% endblock %}
